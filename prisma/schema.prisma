generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/databases/TaskManager.db"
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  nome String
  username String
  email String @unique
  password String @unique

  @@map("users")
}

model Task {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  descricao String 
  concluida Boolean 
}
